{
  "name": "full-bpo-bfb",
  "version": "1.5.0",
  "description": "FullBPO BFB (Back-end For Back-end) service",
  "main": "src/index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "sls offline cloudside",
    "lint": "standard",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "_test": "jest --runInBand --silent --passWithNoTests",
    "test": "npm run test:unit && npm run test:integration",
    "test:staged": "npm run _test -- --findRelatedTests",
    "test:unit": "npm run _test -- --config jest.config.unit.js",
    "test:integration": "npm run _test -- --config jest.config.integration.js",
    "bin:dev": "STAGE=dev node ./bin/index.js",
    "bin:prd": "STAGE=prd node ./bin/index.js",
    "ci": "npm ci && npm test",
    "ci:dev": "npm run ci && npm run bin:dev -- --createIndexes",
    "ci:prd": "npm run ci && npm run bin:prd -- --createIndexes",
    "predeploy:dev": "npm run ci:dev",
    "predeploy:prd": "npm run ci:prd",
    "deploy": "sls deploy --verbose",
    "deploy:dev": "STAGE=dev npm run deploy -- --stage dev",
    "deploy:function:dev": "npm run deploy:dev -- function -f",
    "deploy:prd": "STAGE=prd && npm run deploy -- --stage prd",
    "deploy:function:prd": "npm run deploy:prd -- function -f",
    "deploy:all": "npm run deploy:dev && npm run deploy:prd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fullbpo/full-bpo-bfb.git"
  },
  "author": "Icaro Silva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fullbpo/full-bpo-bfb/issues"
  },
  "homepage": "https://github.com/fullbpo/full-bpo-bfb#readme",
  "dependencies": {
    "axios": "^0.24.0",
    "joi": "^17.4.2",
    "mongodb": "^4.2.1",
    "uuid-by-string": "^3.0.6"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.1.0",
    "@types/jest": "^27.0.2",
    "aws-sdk": "^2.1053.0",
    "dotenv": "^10.0.0",
    "git-commit-msg-linter": "^3.2.8",
    "husky": "^8.0.1",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.3",
    "serverless": "^3.21.0",
    "serverless-cloudside-plugin": "^1.0.6",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-offline": "^11.2.3",
    "standard": "^16.0.4"
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
